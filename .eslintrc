{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [1, 2],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single", { "allowTemplateLiterals": true }],
        "semi": [2, "always"]
    }
}